main {
	width: 100%;
	height: 100%;
	display: grid;
	grid-template-columns: repeat(5, 1fr);
	grid-template-rows: repeat(3, 1fr);
	grid-gap: 1rem;
	grid-auto-flow: column dense;
	padding: 0.5rem;
	box-sizing: border-box;
}

main > div.tile {
	background-color: #333;
	color: white;
	border-radius: 0.25rem;
}

* {
	box-sizing: border-box;
}